mixin button(content='Кнопка', mod='primary', icon)
  button(
    type!=attributes.type
    class!=attributes.class + ` button button--${mod}`
    disabled!=attributes.disabled
    aria-label!=attributes['aria-label']
    data-menu!=attributes['data-menu']
  )
    span(class!=icon ? `button__icon button__icon--${icon}` : '').button__content= content
